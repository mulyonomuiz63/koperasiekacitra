<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Hapus index.php
    RewriteCond %{THE_REQUEST} \s/+(.+/)?index\.php[\s?]
    RewriteRule ^ %1 [R=301,L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
